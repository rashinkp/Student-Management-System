<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #1B262C;
      color: #BBE1FA;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }
    .container {
      background-color: #0F4C75;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      max-width: 600px;
      width: 100%;
      text-align: center;
    }
    #profile-pic {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      margin-bottom: 20px;
      background-color: #3282B8;
      /* Placeholder for profile picture */
    }
    form {
      text-align: left; /* Align form content to the left */
    }
    label {
      display: inline-block; /* Labels behave like blocks */
      width: 120px; /* Width of labels */
      text-align: right; /* Align label text to right */
    }
    input[type="text"],
    input[type="number"] {
      padding: 10px;
      margin: 10px 0;
      width: calc(100% - 130px); /* Adjust width for input */
      border-radius: 5px;
      border: 1px solid #BBE1FA;
      background-color: #3282B8;
      color: #FFFFFF;
      box-sizing: border-box;
    }
    input[type="text"]::placeholder,
    input[type="number"]::placeholder {
      color: #FFFFFF;
      opacity: 1;
    }
    input[type="text"],
    input[type="number"] {
      pointer-events: none;
    }
    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background-color: #BBE1FA;
      color: #0F4C75;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .btn:hover {
      background-color: #1B262C;
      color: #BBE1FA;
    }
  </style>
  


<section>
    <div class="container mt-5 mb-5">
        <h1>My Profile</h1>
            <img id="profile-pic" src="/images/student/{{student_data._id}}.jpg" alt="student photo not supported">
        <form id="profile-form">
            <label for="name">Name:</label>
            <input type="text" id="name" placeholder="{{student_data.firstName}} {{student_data.secondName}}" disabled>
            <label for="age">Age:</label>
            <input type="number" id="age" placeholder="{{student_data.age}}" disabled>
            <label for="sex">Sex:</label>
            <input type="text" id="sex" placeholder="{{student_data.sex}}" disabled>
            <label for="class">Class:</label>
            <input type="text" id="class" placeholder="{{student_data.class}}" disabled>
            <label for="place">Place:</label>
            <input type="text" id="place" placeholder="{{student_data.place}}" disabled>
            <label for="state">State:</label>
            <input type="text" id="state" placeholder="{{student_data.state}}" disabled>
            <label for="mobile">Mobile:</label>
            <input type="text" id="mobile" placeholder="{{student_data.mobile}}" disabled>
            <label for="email">Email:</label>
            <input type="text" id="email" placeholder="{{student_data.email}}" disabled>
            <label for="admission-no">Admission No:</label>
            <input type="text" id="admission-no" placeholder="{{student_data.admissionNo}}" disabled>
            <label for="roll-number">Roll Number:</label>
            <input type="text" id="roll-number" placeholder="{{student_data.rollNumber}}" disabled>
        </form>
        <button class="btn mt-5 mb-5" onclick="editProfile()">Edit</button>
        <a class="btn" href="/student/logout">Logout</a>
    </div>
</section>
