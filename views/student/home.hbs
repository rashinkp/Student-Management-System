    <a href="/student/list-teachers" class="option">
      <i class="fas fa-chalkboard-teacher"></i>
      <p>View Teachers</p>
    </a>
    <a href="/student/list-students" class="option">
      <i class="fas fa-user-graduate"></i>
      <p>View Students</p>
    </a>
    <a href="/student/announcements" class="option">
      <i class="fas fa-bullhorn"></i>
      <p>View Announcements</p>
    </a>
    <a href="/student/profile" class="option">
      <img src="/images/student/{{student_data._id}}.jpg" alt="Student Photo" style="width: 90px; height: 90px; border-radius: 50%; margin-bottom: 10px;">
      <p>My Profile</p>
    </a>
  </div>
</section>

