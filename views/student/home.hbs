 <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;

      background-color:  #1B262C;
    }
    .container {
      max-width: 800px;
      margin: 50px auto;
      text-align: center;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
    .option {
      margin: 20px;
      padding: 20px;
      background-color:#0F4C75;
      border-radius: 5px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      cursor: pointer;
      transition: transform 0.3s ease-in-out;
      width: calc(33.33% - 40px); /* 3 items in a row for large devices */
      text-decoration: none;
    }
    .option:hover {
      transform: scale(1.1);
      background-color: #0F4C75;
    }
    .option i {
      font-size: 48px;
      margin-bottom: 10px;
      color: #ffffff; /* light blue */
    }
    .option p {
      margin: 0;
      font-size: 18px;
      color: #ffffff; /* light blue */
    }
    .option a {
      text-decoration: none; /* Remove underline from anchor tags */
      color: inherit; /* Inherit text color */
    }

    /* Medium devices (tablets, 768px and up) */
    @media (max-width: 991.98px) {
      .option {
        width: calc(50% - 40px); /* 2 items in a row for medium devices */
      }
    }

    /* Small devices (phones, 576px and up) */
    @media (max-width: 575.98px) {
      .option {
        width: calc(100% - 40px); /* 1 item in a row for small devices */
      }
    }
  </style>

<section>
