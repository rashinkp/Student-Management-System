
    <style>

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background: #fff;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        td:last-child {
            text-align: center;
        }
    </style>

    <h1>Attendance Report</h1>

    <table id="attendanceTable">
        <thead>
            <tr>
                <th>Total Working Days</th>
                <th>Present Days</th>
                <th style="text-align: center;">Percentage</th>
            </tr>
        </thead>
        <tbody>
            <td>{{workingDays}}</td>
            <td>{{student_data.attendance.present}}</td>
            <td>{{student_data.attendance.percentage}}</td>
        </tbody>
    </table>
