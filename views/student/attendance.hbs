
    <style>

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background: #fff;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        td:last-child {
            text-align: center;
        }
    </style>

    <h1>Monthly Attendance</h1>

    <table id="attendanceTable">
        <thead>
            <tr>
                <th>Month</th>
                <th>Total Working Days</th>
                <th>Present Days</th>
                <th style="text-align: center;">Percentage</th>
            </tr>
        </thead>
        <tbody>
            <!-- Table rows will be dynamically added here using JavaScript -->
        </tbody>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Sample data, you can replace it with data from your server or any other source
            const monthlyData = [
                { month: 'January', totalDays: 31, presentDays: 25 },
                { month: 'February', totalDays: 28, presentDays: 22 },
                // Add more months as needed
            ];

            const tableBody = document.querySelector('#attendanceTable tbody');

            // Populate the table with data
            monthlyData.forEach(month => {
                const percentage = (month.presentDays / month.totalDays) * 100;
                const row = `
                    <tr>
                        <td>${month.month}</td>
                        <td>${month.totalDays}</td>
                        <td>${month.presentDays}</td>
                        <td>${percentage.toFixed(2)}%</td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });
        });
    </script>