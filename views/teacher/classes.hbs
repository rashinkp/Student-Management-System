    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #1B262C;
            color: #BBE1FA;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

        .title {
            width: 100%;
            text-align: center;
            font-size: 44px;
            margin-bottom: 40px;
            margin-top: 60px;
        }

        .card {
            background-color: #0F4C75;
            padding: 10px;
            border-radius: 10px;
            width: calc(33.33% - 10px);
            cursor: pointer;
            transition: transform 0.3s ease;
            box-sizing: border-box;
            text-decoration: none; /* Added to remove default link underline */
            color: inherit; /* Added to inherit text color from parent */
        }

        .card h2 {
            margin-bottom: 10px;
            margin-top: 20px;
            text-align: center;
            font-size: 84px !important;
            /* Increased size of class number */
        }

        .card p {
            text-align: center;
            transition: font-size 0.3s ease;
            /* Smooth transition for font size change */
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            color: #fff;
        }

        @media screen and (max-width: 768px) {
            .card {
                width: calc(50% - 10px);
                /* 2 cards per row in medium devices */
            }
        }

        @media screen and (max-width: 480px) {
            .card {
                width: 100%;
                /* 1 card per row in small devices */
            }
        }

        @media screen and (min-width: 768px) {
            .card h2 {
                font-size: 36px;
            }
        }
    </style>


