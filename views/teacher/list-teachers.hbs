                style="width: 50px; height: 50px; border-radius: 50%;"
              /></td>
            <td>{{this.firstName}} {{this.secondName}}</td>
            <td>{{this.age}}</td>
            <td>{{this.class}}</td>
            <td>{{this.subject}}</td>
            <td><a href="/principal/teacher-profile/{{this._id}}" class="btn btn-primary">View Details</a></td>
          </tr>

          </tbody>
          {{/each}}
        {{else if teacher}}
