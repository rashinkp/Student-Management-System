  <style>
        body {
            font-family: Arial, sans-serif;
            background-color:#1B262C;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            overflow-x: hidden;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        h1 {
            margin-top: 40px;
            font-size: 36px;
            letter-spacing: 2px;
        }
        section {
            margin-top: 40px;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            text-align: center;
        }
        .option {
            background-color: #3282B8;
            color: #BBE1FA;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
            transition: transform 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .option:hover {
            transform: translateY(-5px);
        }
        .option h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }
        .option p {
            font-size: 16px;
        }
        .signup {
            margin-top: 20px;
        }
        .signup p {
          color: #fff;
        }
        .signup a {
            color: #BBE1FA;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: #0F4C75;
            transition: background-color 0.3s ease;
            margin-right: 10px;
        }
        .signup a:hover {
            background-color: #3282B8;
        }
        .divider {
            width: 100%;
            height: 2px;
            background-color: #BBE1FA;
            margin: 40px 0;
        }
        .decorative-circle {
            width: 100px;
            height: 100px;
            background-color: #0F4C75;
            border-radius: 50%;
            position: absolute;
            top: 20%;
            left: 10%;
            z-index: -1;
        }
        .decorative-triangle {
            width: 0;
            height: 0;
            border-left: 50px solid transparent;
            border-right: 50px solid transparent;
            border-bottom: 100px solid #3282B8;
            position: absolute;
            top: 60%;
            right: 10%;
            z-index: -1;
        }
    </style>



