
    <style>
        .container {
            margin-top: 60px;
        }

        .box {
            width: 100%;
            max-width: 1200px;
            cursor: pointer;
            margin: 20px auto;
            padding: 20px;
            background-color: #3498db;
            color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            position: relative;
            
        }
        .box-section{
            overflow: hidden; /* Hide overflowing content */
            max-height: 200px; /* Set a maximum height for the box */
            padding-right: 100px;
        }

        .box:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        h3 {
            margin-bottom: 10px;
            font-size: 24px;
        }

        .date {
            margin-bottom: 10px;
            font-size: 16px;
        }

        p {
            font-size: 16px;
            overflow: hidden; /* Hide overflowing content */
            text-overflow: ellipsis; /* Add ellipsis (...) for text overflow */
            white-space: nowrap; /* Prevent text from wrapping */
        }

        .add-announcement-btn {
            display: block;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #27ae60;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-announcement-btn:hover {
            background-color: #218c53;
        }

        .btn-section {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .announcement {
            position: relative;
            display: flex;
            align-items: center;
        }

        .announcement-buttons {
            position: absolute;
            top: 50%;
            right: 0;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
        }

        .edit-button,
        .delete-button {
            margin-bottom: 5px;
            padding: 5px;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }
    </style>
{{#each requests}}
    <div class="container">
    
        <div class="box announcement">
            <div class="box-section">
                <h3>{{this.firstName}} {{this.secondName}}</h3>
                <div class="date">Class: {{this.class}}</div>
                <p>Age: {{this.age}}</p>
            </div>
            <div class="announcement-buttons p-5">
                <a class="btn btn-secondary edit-button" href="/principal/approve-request/{{this._id}}">Approve</a>
                <a class="btn btn-danger delete-button" href="/principal/delete-request/{{this._id}}">Delete</a>
            </div>
        </div>
   
</div>
 {{/each}}


