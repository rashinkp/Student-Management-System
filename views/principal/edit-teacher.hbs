<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.css">
<style>
    body {
        background-color: #1B262C;
        font-family: Arial, sans-serif;
        color: #BBE1FA;
        margin: 0;
        padding: 0;
        
    }

    section{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 180vh;
    }

    .container {
    background-color: #0F4C75;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    max-width: 500px;
    width: 100%;
    box-sizing: border-box;
}


    h2 {
        text-align: center;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        background-color: #3282B8;
        color: #ffffff;
        font-size: 16px;
        box-sizing: border-box;
    }

    input[type="checkbox"] {
        margin-top: 10px;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        background-color: #BBE1FA;
        color: #1B262C;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    input[type="submit"]:hover {
        background-color: #1B262C;
        color: #fff;
    }

    .new-admission {
        text-align: center;
        margin-top: 20px;
    }

    input[type="text"]::placeholder,
    input[type="password"]::placeholder {
        color: #fff;
        /* Change placeholder text color to white */
    }

    .tag {
        color: #fff;
    }

    .icon-anger {
        text-decoration: none;
        color: #ffffff;
    }

    .icon-anger:hover {
        color: #1B262C;
    }

    .tag:hover {
        font-weight: bold;
        color: #1B262C;
    }

    .styled-select {
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        background-color: #3282B8;
        color: #ffffff;
        font-size: 16px;
        box-sizing: border-box;
    }

    /* Style the arrow icon */
    .styled-select::after {
        content: '\25BC';
        /* Unicode character for down arrow */
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        pointer-events: none;
        /* Ensure the icon does not interfere with select functionality */
    }

    /* Style the arrow icon on hover */
    .styled-select:hover::after {
        color: #fff;
    }

    /* Style the dropdown options */
    .styled-select option {
        background-color: #3282B8;
        color: #ffffff;
        font-size: 16px;
    }

    /* Hide the original file input */
    .file-input {
        display: none;
    }

    /* Style the file input container */
    .file-input-container {
        position: relative;
        overflow: hidden;
        display: inline-block;
        margin-top: 20px;
    }

    /* Style the file input label */
    .file-input-label {
        background-color: #3282B8;
        color: #ffffff;
        padding: 10px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    /* Style the file input label on hover */
    .file-input-label:hover {
        background-color: #1B262C;
    }

    .image-preview-container {
        margin-top: 20px;
        text-align: center;
    }

    /* Style the image preview */
    #image-preview {
        max-width: 100%;
        max-height: 200px;
        border-radius: 5px;
        margin-top: 10px;
    }
</style>


<section>
  <div class="container mb-5">
    <h2>Edit Teacher</h2>
    <form id="loginForm"  method="POST" action="/principal/edit-teacher/{{teacher._id}}">
        <input name="firstName" type="text" id="firstName" placeholder="First Name" value="{{teacher.firstName}}">
        <input name="secondName" type="text" id="secondName" placeholder="Second Name" value="{{teacher.secondName}}">
        <input name="age" type="text" id="age" placeholder="Age" value="{{teacher.age}}">
        <select id="sex" name="sex" class="styled-select">
            <option value="" disabled selected>{{teacher.sex}}</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <input name="qualification" type="text" id="qualification" placeholder="Education Qualification" value="{{teacher.qualification}}">
        <input name="place" type="text" id="place" placeholder="Place" value="{{teacher.place}}">
        <input name="district" type="text" id="district" placeholder="District" value="{{teacher.district}}">
        <input name="state" type="text" id="state" placeholder="State" value="{{teacher.state}}">
        <select id="class" name="class" class="styled-select" >
          <option value="" disabled selected>{{teacher.class}}</option>
          <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
      </select>
        <div class="image-preview-container">
            <img id="image-preview" src="#" alt="Image Preview" style="display: none;">
        </div>

        <input name="mobile" type="text" id="mobile" placeholder="Mobile Number" value="{{teacher.mobile}}">
        <input name="email" type="text" id="email" placeholder="Email" value="{{teacher.email}}">
        <input name="password" type="password" id="password" placeholder="Create a Password" required>
        <input  type="password" id="confirmPassword" placeholder="Confirm Password" required>
        <small id="passwordMatchMessage" style="display: none; color: #FF6347;">Passwords do not match!</small><br>
        <label for="showPassword"><input type="checkbox" id="showPassword"> Show Password</label>
        <input type="submit" value="Submit">
    </form>
</div>
</section>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById('image-preview').src = e.target.result;
                document.getElementById('image-preview').style.display = 'block';
            };

            reader.readAsDataURL(input.files[0]); // Convert image to base64 string
        }
    }

    // Listen for changes in the file input
    document.getElementById('image').addEventListener('change', function () {
        readURL(this);
    });
    const showPasswordCheckbox = document.getElementById('showPassword');
    const passwordInput = document.getElementById('password');

    showPasswordCheckbox.addEventListener('change', function () {
        const isChecked = this.checked;
        if (isChecked) {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    });

    // Function to check if passwords match
function checkPasswordMatch() {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    const passwordMatchMessage = document.getElementById('passwordMatchMessage');

    if (password !== confirmPassword) {
        passwordMatchMessage.style.display = 'inline'; // Show warning message
    } else {
        passwordMatchMessage.style.display = 'none'; // Hide warning message if passwords match
    }
}

// Add event listener to password confirmation field for blur event
document.getElementById('confirmPassword').addEventListener('blur', checkPasswordMatch);

// Add event listener to form submission for checking password match
document.getElementById('loginForm').addEventListener('submit', function(event) {
    checkPasswordMatch(); // Check password match before submitting the form
    if (document.getElementById('passwordMatchMessage').style.display === 'inline') {
        event.preventDefault(); // Prevent default form submission if passwords do not match
    }
});


</script>